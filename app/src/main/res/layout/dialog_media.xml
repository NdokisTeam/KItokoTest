<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:background="@drawable/abc_dialog_material_background_light"
        android:layout_height="match_parent"
       android:paddingBottom="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/attach_camera"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="21dp"
            android:id="@+id/ivCam"
            android:foregroundGravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:src="@drawable/attach_gallery"
            android:id="@+id/ivGal"
            android:foregroundGravity="center_horizontal"
            android:layout_alignTop="@+id/ivCam"
            android:layout_toRightOf="@+id/ivCam"
            android:layout_toEndOf="@+id/ivCam"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp" />
    </RelativeLayout>

</LinearLayout>